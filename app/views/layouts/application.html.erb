<!DOCTYPE html>
<html>
  <head>
    <title>Thefirstrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "ホーム", root_path %> 
    <% if user_signed_in? %>
      <br>
      こんにちは、
      <%= link_to current_user.name.nil? ? current_user.email : current_user.name , users_show_path %> <br>
      <%= link_to "サインアウト", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "サインイン", new_user_session_path %> 
      <%= link_to "ユーザ登録", new_user_registration_path %><br>
    <% end %>
    <hr>
    <%= yield %>
  </body>
</html>